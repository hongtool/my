<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <properties resource="jdbc.properties"></properties><!-- 加载属性文件 -->

    <typeAliases>
        <!-- <typeAlias type="com.mybatis.po.Student" alias="stu"/> --><!-- 定义单个别名 -->
        <package name="com.mybatis.po"/><!--定义POJO所在的包即可，mybatis会自动扫描包中的类，自动定义别名，即类名，首字母可大写或小写 -->
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC" />
            <!-- 数据库基本信息 -->
            <dataSource type="POOLED"><!--数据库连接池 -->
                <property name="driver" value="${jdbc.className}" />
                <property name="url" value="${jdbc.url}" />
                <property name="username" value="${jdbc.username}" />
                <property name="password" value="${jdbc.password}" />
            </dataSource>
        </environment>
    </environments>
    <!-- 加载映射文件 -->
    <mappers>
        <mapper resource="sqlMapper.xml" />
    </mappers>
</configuration>